    "version": "0.2.0",
    "configurations": [
        {
            "name": "Home Assistant",
            "type": "debugpy",
            "request": "launch",
            "module": "homeassistant",
            "args": [
                "--debug",
                "-c",
                "config"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
        "name": "Home Assistant: Debug Current Test File",
        "type": "debugpy",
        "request": "launch",
        "module": "pytest",
        "console": "integratedTerminal",
        "args": ["-vv", "${file}"]
        },
    ]
}
